	.parent {
		display: grid;
		grid-template-columns: repeat(5, 1fr);
		grid-template-rows: repeat(5, 1fr);
		grid-column-gap: 0px;
		grid-row-gap: 0px;
	}

	.div1 {
		grid-area: 1 / 1 / 2 / 2;
	}
	.div2 {
		grid-area: 1 / 2 / 2 / 5;
	}
	.div3 {
		grid-area: 2 / 2 / 3 / 3;
	}
	.div4 {
		grid-area: 2 / 3 / 3 / 4;
	}
	.div5 {
		grid-area: 2 / 4 / 3 / 5;
	}
	.div6 {
		grid-area: 3 / 2 / 4 / 3;
	}
	.div7 {
		grid-area: 3 / 3 / 4 / 4;
	}
	.div8 {
		grid-area: 3 / 4 / 4 / 5;
	}
	.div9 {
		grid-area: 4 / 2 / 5 / 3;
	}
	.div10 {
		grid-area: 4 / 3 / 5 / 4;
	}
	.div11 {
