---
import Layout from "../layouts/Layout.astro";
import DishCard from "../components/DishCard.astro";
import Logo from "../components/Logo.astro";
---

<Layout title="Starters">
	<main class="parent">
		<header class="header">
			<p class="headerLogo div1"><Logo href="/" image="/images/Logo.png" /></p>
			<h1 class="headerCaption div2">
				<span class="text-gradient">Starters</span>
			</h1>
			<p class="instructions headerSlogan">
				Will warm your heart (because of the heartburn).
			</p>
		</header>
		<ul role="list" class="link-card-grid">
			<DishCard
				href="/posts/starters2/"
				image="/images/starters.png"
				title="Baba Ganush"
			/>
		</ul>
	</main>
</Layout>

